#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<StartButton>:
    size: 100, 100
    Button:
        font_size: 24
        text: "START A GAME"


<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player1_score: score_left
    player2_score: score_right
    winner: player_wins
    start_game: start_button

    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        id: score_left
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        id: score_right
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

    Label:
        id: player_wins
        font_size: 70
        center_x: root.width * 1 / 2
        top: root.top - 400
        text: ""

    Button:
        id: start_button
        size: 200, 100
        font_size: 24
        center_x: root.width * 1 / 2
        top: root.top - 150
        text: "Start Game"
        on_press: root.start()

#    StartButton:
#        id: start_button
#        center_x: root.width * 1 / 2
#        top: root.top - 50
#        text: ""

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y

